@page 
@model student_registration.Pages.Students.IndexModel

<h2 class="mb-3">Student List</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>NIC</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>LastNameWithInitials</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Basic Qualifications</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var student in Model.students)
        {
            <tr>
                <td>@student.NIC</td>
                <td>@student.FirstName</td>
                <td>@student.MiddleName</td>
                <td>@student.LastNameWithInitials</td>
                <td>@student.Address</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>@student.BasicQualifications</td>

                <td>
                    <a asp-page="Edit" asp-route-id="@student.Id" class="btn btn-warning btn-sm me-1 mb-2">
                        Edit
                    </a>

                    <!-- DELETE BUTTON -->
                    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this student?');">
                        <input type="hidden" name="id" value="@student.Id" />
                        <button class="btn btn-danger btn-sm">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>

        }
    </tbody>
</table>
